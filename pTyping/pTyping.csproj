<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Furball\Furball.Engine\Furball.Engine.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <MonoGameContentReference Include="Content\Content.mgcb">
            <Link>Content/%(RecursiveDir)%(Filename)%(Extension)</Link>
        </MonoGameContentReference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="DiscordRichPresence" Version="1.0.175"/>
        <PackageReference Include="EeveeTools" Version="1.0.0"/>
        <PackageReference Include="Kettu" Version="1.2.1"/>
        <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.1.2062-develop"/>
        <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.1.2062-develop"/>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1"/>
        <PackageReference Include="ParallelExtensionsCore" Version="1.3.0"/>
        <PackageReference Include="System.Text.Encoding.CodePages" Version="5.0.0"/>
        <PackageReference Include="WebSocketSharp" Version="1.0.3-rc11"/>
    </ItemGroup>

    <ItemGroup>
        <None Remove="Content\user-card.kra~"/>
        <None Remove="Content\mode-icons.kra~"/>
        <None Remove="Content\song-button-background.png~"/>
        <None Remove="Content\song-button-background.kra~"/>
        <None Remove="Content\backbutton.png~"/>
        <None Remove="Content\back-button.kra~"/>
    </ItemGroup>

    <ItemGroup>
        <None Remove="gitversion.txt"/>
        <EmbeddedResource Include="gitversion.txt">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </EmbeddedResource>
    </ItemGroup>

    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
        <Exec Command="git describe --long --always --dirty --exclude=\* --abbrev=8 &gt; &quot;$(ProjectDir)/gitversion.txt&quot;"/>
    </Target>

</Project>
